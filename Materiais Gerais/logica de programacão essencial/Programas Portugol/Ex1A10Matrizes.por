//Exercicio para fixação de utilização de Matrizes e vetores utilizando estrutura de repetição para escrita das variáveis

programa
{
	
	funcao inicio()
	{
		cadeia frutas[4]
		inteiro contador = 0

		frutas[0] = "Maçã"
		frutas[1] = "Pêra"
		frutas[2] = "laranja"
		frutas[3] = "Mamão"

		faca{
			escreva(frutas[contador]+"\n")
			contador++
		}enquanto (contador<=3)
	}
}
